<html>
  <head>
    <title>foobar</title>
    <link type="text/css" href="/styles.css" rel="stylesheet">
    <style type="text/css">
      .mod_log tr:nth-child(2n+2) {
          background: none repeat scroll 0 0 #151515;
      }
      td, th {
        padding: 0px;
      }
      .key {
        text-align: right;
      }
      .date {
        padding-right: 10px;
      }
      .action {
        padding-left: 10px;
        text-align: center;
      }
      .postid {
        padding-left: 10px;
      }
      .reason {
        text-align: right;
        padding-left: 10px;
      }
      .actions {
        padding-left: 10px;
      }
      .data_center {
        text-align: center;
        padding-left: 10px;
      }
      .box {
        border: 1px dotted #AFAFAF;
      }
    </style>
  </head>
  <body class="mod">
    ${navigation}
    <div class="box">
      <b>moderation [ ${accepted_log} | ${ignored_log} ]</b>
      <table class="mod_log">
        <tr>
          <th>&nbsp;</th>
          <th>&nbsp;</th>
          <th>action</th>
          <th>target</th>
          <th>reason</th>
          <th>&nbsp;</th>
          <th>comment</th>
        </tr>
${mod_log}
      </table>
    </div>
    <br />
    ${pagination}
    <br />
  </body>
</html>
