    <div class="box">
      <form action="postman?${userkey}" enctype="multipart/form-data" method="POST" style="text-align: center;">
        <table class="datatable">
          <tr>
            <th align="right">User key</th>
            <td>${userkey_edit}</td>
          </tr>
          <tr>
            <th align="right">local name</th>
            <td><input type="text" name="local_name" value="${local_name}" class="posttext" maxlength="20"/></td>
          </tr>
          <tr>
            <th align="right">Allow</th>
            <td><input name="allow" id="allow" value="1"${allow} type="checkbox"></td>
          </tr>
          <tr>
            <th align="right">is valid days</th>
            <td><input type="text" name="expires" value="${expires}" class="posttext" maxlength="8"/></td>
          </tr>
          <tr>
            <th><input name="logout" id="logout" value="1" type="checkbox"><label for="logout">log off</label></th>
            <td align="right"><input type="submit" value="${action}" class="postbutton" /></td>
          </tr>
        </table>
      </form>
    </div>
    <br />
